{
	"name": "translateextension",
	"displayName": "TranslateExtension",
	"description": "Translate XILFF files in a Visual Studio code workpace",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.translatexliff"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.translatexliff",
				"title": "Translate XLIFF files"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.0.5",
		"@types/xmldom": "^0.1.29",
		"tslint": "^5.17.0",
		"typescript": "^3.5.1",
		"vscode": "^1.1.34"
	},
	"dependencies": {
		"typed-rest-client": "^1.5.0",
		"xmldom": "^0.1.27"
	}
}
